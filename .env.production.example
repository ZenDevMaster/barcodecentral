# ==========================================
# Barcode Central - Production Configuration
# ==========================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=0

# Security - CHANGE THESE VALUES!
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MINIMUM_32_CHARACTERS

# Authentication
# Change these credentials for production use
LOGIN_USER=admin
LOGIN_PASSWORD=CHANGE_THIS_PASSWORD

# Application Settings
APP_NAME=Barcode Central
APP_VERSION=1.0.0

# Logging
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Session Configuration
# Set to true if using HTTPS
SESSION_COOKIE_SECURE=false

# Server Configuration (for gunicorn)
# Number of worker processes (default: CPU cores * 2 + 1)
# WORKERS=4

# Worker timeout in seconds
# TIMEOUT=120

# ==========================================
# Production Deployment Notes
# ==========================================
# 1. Generate a strong SECRET_KEY
# 2. Change default LOGIN_USER and LOGIN_PASSWORD
# 3. Set SESSION_COOKIE_SECURE=true if using HTTPS
# 4. Review LOG_LEVEL (INFO recommended for production)
# 5. Ensure this file has restricted permissions (chmod 600 .env)